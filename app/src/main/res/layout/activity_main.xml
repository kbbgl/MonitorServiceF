<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/main_header_selector">


    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Service"
        android:fontFamily="@font/audiowide"
        android:layout_centerHorizontal="true"
        android:background="#006400"
        android:textColor="#fff"
        android:padding="5dp"/>

    <Button
        android:id="@+id/see_graphs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/start_btn"
        android:text="analytics"
        android:fontFamily="@font/audiowide"
        android:layout_alignRight="@id/start_btn"
        android:layout_alignLeft="@id/start_btn"
        android:padding="5dp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="#fff"
        android:layout_marginTop="3dp"/>

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/see_graphs"
        android:text="Stop Service"
        android:fontFamily="@font/audiowide"
        android:layout_centerHorizontal="true"
        android:background="#8B0000"
        android:textColor="#fff"
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@id/start_btn"
        android:layout_alignRight="@id/start_btn" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_sigin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">
    </com.google.android.gms.common.SignInButton>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:civ_border_width="5dp"
        app:civ_border_color="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/stop_btn"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_profile_image"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/audiowide"
        android:text="sample"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"/>

</RelativeLayout>
